<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecuperarFragment">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/crushed"
            android:text="CAMBIO DE CONTRASEÑA"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

     
        <EditText
            android:id="@+id/recupMailRegist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:hint="Correo electrónico registrado"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/chgPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:hint="Contraseña nueva min 8 caracteres"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/chgPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:inputType="textPassword"
            android:hint="Repetir contraseña nueva"
            android:importantForAutofill="no" />

         

        <Button
            android:id="@+id/botCambiarPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_redondeado"
            android:fontFamily="@font/crushed"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="Guardar contraseña nueva" />


    </LinearLayout>

</FrameLayout>